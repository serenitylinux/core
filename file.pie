# vim: ft=sh
name="file"
version="5.16"
desc="File type identification utility"
url="http://www.darwinsys.com/file/"
src="https://github.com/glensc/file/archive/FILE5_16.tar.gz"
bdeps="glibc zlib"
deps="glibc zlib"
arch="any"
