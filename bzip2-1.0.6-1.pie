# vim: ft=sh
name="bzip2"
iteration="1"
version="1.0.6"
desc="A high-quality data compression program"
url="http://sources.redhat.com/bzip2"
src=('http://www.bzip.org/1.0.6/bzip2-1.0.6.tar.gz')
bdeps=('glibc')
deps=('glibc')
arch=('any')
flags=()
srcdir="$name-$version"


function configure() {
	none
}

function build() {
	default
}

function installpkg() {
	make install PREFIX=${dest_dir}
	mkdir -p ${dest_dir}/usr/
	cp -a ${dest_dir}/bin ${dest_dir}/usr/bin
	rm -rf ${dest_dir}/bin
}
